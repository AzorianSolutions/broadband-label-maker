<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="FCC Broadband Consumer Label Maker">
    <meta name="keywords" content="app, responsive, jquery, bootstrap, dashboard, admin, fcc, label, broadband, consumer">
    <link rel="icon" type="image/x-icon" href="{{ static('img/favcon/favicon.ico') }}">
    <title>Broadband Labeler - {% block title %}{% endblock %}</title>
    {% include 'layout/head-styles.jinja2' %}
    {% block html_head %}{% endblock %}
</head>
<body class="hold-transition">
<div id="app">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link"><i class="nav-icon fas fa-house"></i> Home</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img alt="Logo" src="{{ static('dist/img/AdminLTELogo.png') }}"
                     class="brand-image img-circle elevation-3"
                     style="opacity: .8"/>
                <span class="brand-text font-weight-light">Broadband Labeler</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search"
                               aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                <i class="nav-icon fas fa-house"></i>
                                <p>Home</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        {% block content %}{% endblock %}

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 0.1.0
            </div>
            <strong>Created by <a href="https://azorian.solutions" target="_blank">Azorian Solutions</a>.</strong>
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
    </div>
</div>
{% include 'layout/footer-scripts.jinja2' %}
{% block footer_scripts scoped %}{% endblock %}
</body>
</html>